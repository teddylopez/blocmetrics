<% if current_user.registered_apps.any? %>
  <div class="headers">
    <h3>Your registered apps:</h3>
    <%= link_to "Register an app", new_registered_app_path%>
  </div>

<table class="highlight centered">
  <thead>
    <tr>
      <th>App</th>
      <th>App URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registered_apps.each do |app| %>
      <tr>
        <td><%= link_to app.name, registered_app_path(app) %></td>
        <td><%= app.url %></td>

        <% if current_user == app.user %>
          <td><%= link_to 'Remove', registered_app_path(app), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% else %>
<h1>You have not registered any apps</h1>
<%= link_to "Register an app", new_registered_app_path%>
<%end %>
