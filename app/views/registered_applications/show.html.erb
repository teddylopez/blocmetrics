<h1> Show Page </h1>

<div class="row">
  	<div class="col-md-8">
  		<h4>URL: <%= link_to @registered_application.url, "http://#{@registered_application.url}" %></h4>
  		<p>Added by <%= @registered_application.user.email %></p>

 		<% @events.group_by(&:name).each do |name, events| %>
 			 <%= name %> | <%= events.count %>
 		<% end %>

 		<%= pie_chart @registered_application.events.group(:name).count %>
    <%= line_chart @registered_application.events.group_by_day(:created_at).count %>
 		<p>Added by <%= @registered_application.user.email %></p>
  	</div>
</div>
